                <TextView
                    android:id="@+id/txtCompraProtegida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="29"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#529464"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="Compra Protegida, recibe el producto que esperabas o te devolvemos tu dinero." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearPuntos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="30"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCopa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/trofeo" />

                <TextView
                    android:id="@+id/txtSumaPuntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#529464"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="Mercado Puntos, sumas 0 puntos" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAddFavoritos"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:textColor="#4579ef"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:drawableLeft="@drawable/megusta"

                    android:background="@android:color/transparent"
                    android:text="Agregar a favoritos" />

                <Button
                    android:id="@+id/btnCompartir"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:textColor="#4579ef"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/compartir"
                    android:text="Compartir" />
            </LinearLayout>

